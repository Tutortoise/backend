{
  "name": "@tutortoise/backend",
  "version": "0.1.0",
  "description": "Backend for Tutortoise",
  "main": "src/main.ts",
  "scripts": {
    "start": "bun src/main.ts",
    "dev": "bun --watch src/main.ts",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "db:seed": "bun run src/seed.ts",
    "db:migrate": "bunx drizzle-kit migrate",
    "swagger": "bun run src/swagger/index.ts",
    "test": "NODE_ENV=test firebase emulators:exec --only storage,database --project tutortoise-test 'vitest'",
    "test:ui": "NODE_ENV=test firebase emulators:exec --only storage,database --ui --project tutortoise-test 'vitest'",
    "lint-staged": "bun lint && NODE_ENV=test firebase emulators:exec --only storage,database --project tutortoise-test 'vitest run'"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.14.0",
    "axios": "^1.7.8",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.28.1",
    "drizzle-orm": "^0.36.4",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "firebase-admin": "^12.7.0",
    "google-auth-library": "^9.15.0",
    "groq-sdk": "^0.8.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "pg": "^8.13.1",
    "qs": "^6.13.1",
    "sharp": "^0.33.5",
    "winston": "^3.16.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/pg": "^8.11.10",
    "@types/qs": "^6.9.17",
    "@types/supertest": "^6.0.2",
    "firebase-tools": "^13.27.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "swagger-autogen": "^2.23.7",
    "vitest": "^2.1.5"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  }
}

{
  "name": "@tutortoise/backend",
  "version": "0.1.0",
  "description": "Backend for Tutortoise",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "pnpm run build && node dist/main.js",
    "dev": "tsx --watch src/main.ts",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "seed": "tsx src/seed.ts",
    "test": "NODE_ENV=test firebase emulators:exec --only auth,firestore --project tutortoise-test 'vitest'"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.14.0",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "firebase-admin": "^12.7.0",
    "groq-sdk": "^0.8.0",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "sharp": "^0.33.5",
    "winston": "^3.16.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/supertest": "^6.0.2",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  }
}
